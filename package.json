{
  "name": "stylefmt-loader",
  "version": "1.2.0",
  "description": "Fixes stylelint issues automatically while bundling with Webpack",
  "author": {
    "name": "Tomas Alabes"
  },
  "main": "stylefmt-loader.js",
  "dependencies": {
    "loader-utils": "0.2.16",
    "postcss-scss": "0.3.1"
  },
  "peerDependencies": {
    "postcss": ">= 5",
    "stylefmt": ">=5",
    "webpack": ">= 2.2.0"
  },
  "devDependencies": {
    "mocha": "3.2.0",
    "stylefmt": "5.1.1",
    "stylelint-config-standard": "15.0.1",
    "webpack": "2.2.0"
  },
  "scripts": {
    "test": "(cd tests/example && cp ../original/test.scss . && rm -rf ./node_modules/stylefmt-loader && npm i && ../../node_modules/webpack/bin/webpack.js --config webpack.config.js) && ./node_modules/mocha/bin/mocha --ui tdd tests/loader.js"
  },
  "keywords": [
    "webpack",
    "loader",
    "webpack-loader",
    "stylefmt",
    "stylelint"
  ],
  "license": "MIT",
  "repository": {
    "url": "https://github.com/tomasAlabes/stylefmt-loader",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/tomasAlabes/stylefmt-loader/issues"
  },
  "engines": {
    "node": ">=4.2.0"
  }
}
